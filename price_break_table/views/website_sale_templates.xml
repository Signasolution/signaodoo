<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Template pour le tableau de prix dégressifs sur les pages produit -->
        <template id="website_sale_product_price_break" name="Product Price Break Table" inherit_id="website_sale.product">
            <!-- Ajouter un méta tag pour identifier la page produit -->
            <xpath expr="//head" position="inside">
                <meta name="page-type" content="product"/>
                <meta name="product-template-id" content="product_template.id"/>
            </xpath>
            
            <!-- Ajouter le conteneur du tableau -->
            <xpath expr="//div[@id='product_detail']" position="inside">
                <div class="price-break-table-widget" 
                     data-product-id="product_template.id" 
                     data-pricelist-id="1" 
                     data-partner-id="1" 
                     data-current-quantity="1" 
                     style="margin-top: 20px;">
                    <!-- Le tableau sera chargé dynamiquement par JavaScript -->
                </div>
            </xpath>
        </template>

    </data>
</odoo>
