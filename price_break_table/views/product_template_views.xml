<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_line_form_view_price_break" model="ir.ui.view">
        <field name="name">sale.order.line.form.price.break</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <div class="price-break-table-widget" 
                     data-product-id="product_id" 
                     data-pricelist-id="order_id.pricelist_id" 
                     data-partner-id="order_id.partner_id" 
                     data-current-quantity="product_uom_qty" 
                     style="margin-top: 10px;">
                    <!-- Le tableau sera chargÃ© dynamiquement par JavaScript -->
                </div>
            </xpath>
        </field>
    </record>
</odoo>
