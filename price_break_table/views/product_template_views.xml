<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire des lignes de commande avec tableau de prix -->
    <record id="sale_order_line_form_view_price_break" model="ir.ui.view">
        <field name="name">sale.order.line.form.price.break</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.sale_order_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <div class="price-break-table-widget" 
                     data-product-id="product_id" 
                     data-pricelist-id="order_id.pricelist_id" 
                     data-partner-id="order_id.partner_id" 
                     data-current-quantity="product_uom_qty" 
                     style="margin-top: 10px;">
                    <!-- Le tableau sera chargé dynamiquement par JavaScript -->
                </div>
            </xpath>
        </field>
    </record>

    <!-- Vue formulaire des produits avec tableau de prix -->
    <record id="product_template_form_view_price_break" model="ir.ui.view">
        <field name="name">product.template.form.price.break</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="after">
                <div class="price-break-table-widget" 
                     data-product-id="id" 
                     data-pricelist-id="'1'" 
                     data-partner-id="'1'" 
                     data-current-quantity="'1'" 
                     style="margin-top: 10px;">
                    <!-- Le tableau sera chargé dynamiquement par JavaScript -->
                </div>
            </xpath>
        </field>
    </record>
</odoo>
