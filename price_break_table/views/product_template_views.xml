<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire des produits avec tableau de prix -->
    <record id="product_template_form_view_price_break" model="ir.ui.view">
        <field name="name">product.template.form.price.break</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="inside">
                <group string="Prix dégressifs">
                    <div class="price-break-table-widget" 
                         data-product-id="id" 
                         data-pricelist-id="'1'" 
                         data-partner-id="'1'" 
                         data-current-quantity="'1'" 
                         style="margin-top: 10px;">
                        <!-- Le tableau sera chargé dynamiquement par JavaScript -->
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
