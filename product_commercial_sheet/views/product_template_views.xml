<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Extension de la vue formulaire produit -->
        <record id="product_template_form_view_commercial_sheet" model="ir.ui.view">
            <field name="name">product.template.form.commercial.sheet</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_create_commercial_sheet" 
                            string="Créer Fiche Commerciale" 
                            type="object" 
                            class="btn-primary"
                            help="Créer une fiche commerciale pour ce produit"/>
                </xpath>
                
                <xpath expr="//field[@name='sale_ok']" position="after">
                    <field name="commercial_sheet_count" invisible="1"/>
                </xpath>
                
                <xpath expr="//page[@name='sales']" position="inside">
                    <group name="commercial_sheets" string="Fiches Commerciales" col="2">
                        <field name="commercial_sheet_count" widget="statinfo" 
                               string="Fiches Commerciales"/>
                        <button name="action_view_commercial_sheets" 
                                string="Voir les fiches" 
                                type="object" 
                                class="btn-link"
                                invisible="commercial_sheet_count == 0"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Extension de la vue liste produit -->
        <record id="product_template_tree_view_commercial_sheet" model="ir.ui.view">
            <field name="name">product.template.tree.commercial.sheet</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="commercial_sheet_count" widget="statinfo" 
                           string="Fiches" optional="hide"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
