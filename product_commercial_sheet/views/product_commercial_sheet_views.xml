<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue liste des fiches commerciales -->
        <record id="view_product_commercial_sheet_tree" model="ir.ui.view">
            <field name="name">product.commercial.sheet.tree</field>
            <field name="model">product.commercial.sheet</field>
            <field name="arch" type="xml">
                <list string="Fiches Commerciales" decoration-info="state == 'draft'" decoration-success="state == 'published'">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="product_name"/>
                    <field name="product_reference"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'published'"/>
                    <field name="user_id"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire des fiches commerciales -->
        <record id="view_product_commercial_sheet_form" model="ir.ui.view">
            <field name="name">product.commercial.sheet.form</field>
            <field name="model">product.commercial.sheet</field>
            <field name="arch" type="xml">
                <form string="Fiche Commerciale">
                    <header>
                        <button name="action_confirm" string="Confirmer" type="object" 
                                class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_publish" string="Publier" type="object" 
                                class="btn-success" invisible="state != 'confirmed'"/>
                        <button name="action_draft" string="Remettre en brouillon" type="object" 
                                class="btn-secondary" invisible="state not in ['confirmed', 'published']"/>
                        <button name="action_generate_pdf" string="Générer PDF" type="object" 
                                class="btn-info" invisible="state not in ['confirmed', 'published']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,published"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la fiche commerciale"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="product_info" string="Informations Produit">
                                <field name="product_id" options="{'no_create': True}"/>
                                <field name="product_name" readonly="1"/>
                                <field name="product_reference" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                            </group>
                            <group name="custom_fields" string="Champs Personnalisés">
                                <field name="custom_field_1"/>
                                <field name="custom_field_2"/>
                                <field name="custom_field_3"/>
                                <field name="custom_field_4"/>
                                <field name="custom_field_5"/>
                                <field name="custom_field_6"/>
                                <field name="custom_field_7"/>
                                <field name="custom_field_8"/>
                            </group>
                        </group>
                        
                        <group>
                            <group name="description" string="Description">
                                <field name="product_description" readonly="1"/>
                            </group>
                        </group>
                        
                        <group name="pdf_section" string="Fichier PDF" invisible="not pdf_file">
                            <field name="pdf_filename" readonly="1"/>
                            <field name="pdf_file" readonly="1" filename="pdf_filename"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue recherche des fiches commerciales -->
        <record id="view_product_commercial_sheet_search" model="ir.ui.view">
            <field name="name">product.commercial.sheet.search</field>
            <field name="model">product.commercial.sheet</field>
            <field name="arch" type="xml">
                <search string="Rechercher Fiches Commerciales">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="product_name"/>
                    <field name="product_reference"/>
                    <field name="user_id"/>
                    <separator/>
                    <filter string="Brouillons" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmées" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Publiées" name="published" domain="[('state', '=', 'published')]"/>
                    <separator/>
                    <filter string="Mes fiches" name="my_sheets" domain="[('user_id', '=', uid)]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Produit" name="group_product" context="{'group_by': 'product_id'}"/>
                        <filter string="Utilisateur" name="group_user" context="{'group_by': 'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour les fiches commerciales -->
        <record id="action_product_commercial_sheet" model="ir.actions.act_window">
            <field name="name">Fiches Commerciales</field>
            <field name="res_model">product.commercial.sheet</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_product_commercial_sheet_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première fiche commerciale !
                </p>
                <p>
                    Les fiches commerciales vous permettent de créer des documents
                    personnalisés pour vos produits avec des champs configurables.
                </p>
            </field>
        </record>

        <!-- Menu principal -->
        <menuitem id="menu_product_commercial_sheet"
                  name="Fiches Commerciales"
                  parent="sale.sale_menu_root"
                  action="action_product_commercial_sheet"
                  sequence="20"/>

    </data>
</odoo>
