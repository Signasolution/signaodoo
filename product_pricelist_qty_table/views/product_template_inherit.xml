<odoo>
    <template id="product_pricelist_table" name="Tableau des prix dégressifs">
        <t t-if="pricelist_items and pricelist_items | length">
            <div id="pricelist_qty_table" class="table-responsive mt-3">
                <p><strong>Liste de prix : <t t-esc="pricelist.name"/></strong></p>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Quantité minimale</th>
                            <th>Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="pricelist_items" t-as="item">
                            <tr>
                                <td><t t-esc="item.min_quantity"/></td>
                                <td><t t-esc="item.fixed_price"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>