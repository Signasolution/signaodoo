<odoo>
    <template id="product_pricelist_table" inherit_id="website_sale.product">
        <xpath expr="//div[@id='product_details']" position="inside">
            <t t-set="pricelist_items" t-value="product.product_variant_id.get_pricelist_items_qty()"/>
            <t t-if="pricelist_items and pricelist_items | length">
                <div class="my-3">
                    <h4>Tarifs dégressifs</h4>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Quantité minimale</th>
                                <th>Prix unitaire</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="pricelist_items" t-as="item">
                                <tr>
                                    <td><t t-esc="item['min_quantity']"/></td>
                                    <td><t t-esc="formatLang(item['price'], currency_obj=item['currency'])"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
