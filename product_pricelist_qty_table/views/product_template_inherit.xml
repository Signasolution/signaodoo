<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_pricelist_table" inherit_id="website_sale.product" name="Tableau des prix dégressifs">
        <xpath expr="//div[contains(@class, 'o_product_terms_conditions')]" position="before">
            <div t-if="pricelist_items and pricelist_items | length">
                <t t-call="product_pricelist_qty_table.product_pricelist_table_content"/>
            </div>
        </xpath>
    </template>

    <template id="product_pricelist_table_content">
        <div class="table-responsive mt-3">
            <table class="table table-sm table-bordered">
                <thead>
                    <tr>
                        <th>Quantité</th>
                        <th>Prix unitaire</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="pricelist_items" t-as="item">
                        <tr>
                            <td><t t-esc="item['min_quantity']"/></td>
                            <td><t t-esc="item['price_formatted']"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </template>
</odoo>
