<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Bouton objet pour éviter la résolution d'ID externe au chargement -->
    <record id="view_product_form_inherit_product_sheet_button" model="ir.ui.view">
      <field name="name">product.template.form.product_sheet_button</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//form/header" position="inside">
          <button name="action_print_product_sheet"
                  string="Imprimer la fiche produit"
                  type="object"
                  class="oe_highlight"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>