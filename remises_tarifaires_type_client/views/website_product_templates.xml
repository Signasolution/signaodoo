<odoo>
  <template id="product_price_discounted_inherit" inherit_id="website_sale.product">
    <xpath expr="//span[@itemprop='price']" position="replace">
      <t t-if="product.website_price < product.lst_price">
        <span class="oe_price oe_price_before" style="text-decoration: line-through;">
          <t t-esc="product.lst_price" t-options="{'widget': 'monetary', 'display_currency': website.pricelist_id.currency_id}"/>
        </span>
        &nbsp;
        <span class="oe_price oe_price_after text-danger">
          <t t-esc="product.website_price" t-options="{'widget': 'monetary', 'display_currency': website.pricelist_id.currency_id}"/>
        </span>
      </t>
      <t t-else="">
        <span class="oe_price">
          <t t-esc="product.lst_price" t-options="{'widget': 'monetary', 'display_currency': website.pricelist_id.currency_id}"/>
        </span>
      </t>
    </xpath>
  </template>
</odoo>
