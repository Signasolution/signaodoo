<odoo>
  <record id="view_type_client_form" model="ir.ui.view">
    <field name="name">res.partner.type.form</field>
    <field name="model">res.partner.type</field>
    <field name="arch" type="xml">
      <form string="Type de client">
        <sheet>
          <group>
            <field name="name"/>
            <field name="discount_rate"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_type_client_tree" model="ir.ui.view">
    <field name="name">res.partner.type.tree</field>
    <field name="model">res.partner.type</field>
    <field name="arch" type="xml">
      <tree string="Types de clients">
        <field name="name"/>
        <field name="discount_rate"/>
      </tree>
    </field>
  </record>

  <menuitem id="menu_type_client_root" parent="sale.sale_configuration" name="Types de client" parent="contacts.menu_contacts_configuration" sequence="10"/>
  <menuitem id="menu_type_client" name="Types de client" parent="menu_type_client_root" action="action_type_client"/>

  <record id="action_type_client" model="ir.actions.act_window">
    <field name="name">Types de client</field>
    <field name="res_model">res.partner.type</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
