<odoo>
  <template id="product_price_table" inherit_id="website_sale.product">
    <xpath expr="//div[@id='product_details']" position="inside">
      <t t-if="product.get_pricelist_items()">
        <div class="table-responsive mt-3">
          <table id="price-break-table" class="table table-hover">
            <thead>
              <tr>
                <th>Quantit√© minimale</th>
                <th>Prix unitaire</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="product.get_pricelist_items()" t-as="item">
                <tr class="price-row" t-att-data-qty="item.min_quantity">
                  <td><t t-esc="item.min_quantity" /></td>
                  <td>
                    <t t-set="price" t-value="item.fixed_price" />
                    <t t-esc="product.currency_id.symbol and product.currency_id.position == 'before' and product.currency_id.symbol or ''" />
                    <t t-esc="price" />
                    <t t-esc="product.currency_id.symbol and product.currency_id.position == 'after' and product.currency_id.symbol or ''" />
                  </td>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </t>
    </xpath>
  </template>
</odoo>