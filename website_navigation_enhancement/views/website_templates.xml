<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Template pour le fil d'Ariane -->
        <template id="website_breadcrumb_template" name="Website Breadcrumb">
            <div class="website-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Accueil</a>
                        </li>
                        <t t-if="request.httprequest.path.startswith('/shop')">
                            <li class="breadcrumb-item">
                                <a href="/shop">Boutique</a>
                            </li>
                            <t t-if="request.httprequest.path != '/shop'">
                                <t t-set="path_parts" t-value="request.httprequest.path.split('/')"/>
                                <t t-set="category_path" t-value="''"/>
                                <t t-foreach="path_parts" t-as="part" t-if="part and part != 'shop'">
                                    <t t-set="category_path" t-value="category_path + '/' + part"/>
                                    <li class="breadcrumb-item" t-att-class="'active' if part == path_parts[-1] else ''">
                                        <t t-if="part == path_parts[-1]">
                                            <t t-esc="part.replace('-', ' ').title()"/>
                                        </t>
                                        <t t-else="">
                                            <a t-att-href="category_path">
                                                <t t-esc="part.replace('-', ' ').title()"/>
                                            </a>
                                        </t>
                                    </li>
                                </t>
                            </t>
                        </t>
                        <t t-elif="request.httprequest.path.startswith('/product')">
                            <li class="breadcrumb-item">
                                <a href="/shop">Boutique</a>
                            </li>
                            <t t-if="product and product.categ_id">
                                <t t-set="category_breadcrumb" t-value="product.categ_id.get_breadcrumb()"/>
                                <t t-foreach="category_breadcrumb" t-as="cat">
                                    <li class="breadcrumb-item">
                                        <a t-att-href="'/shop/category/' + cat.id">
                                            <t t-esc="cat.name"/>
                                        </a>
                                    </li>
                                </t>
                            </t>
                            <li class="breadcrumb-item active">
                                <t t-esc="product.name"/>
                            </li>
                        </t>
                    </ol>
                </nav>
            </div>
        </template>

        <!-- Template pour améliorer la navigation principale -->
        <template id="website_navigation_enhancement" name="Website Navigation Enhancement" inherit_id="website.layout">
            <xpath expr="//nav[@id='top_menu']" position="attributes">
                <attribute name="class">website-navigation</attribute>
            </xpath>
            
            <!-- Ajouter le fil d'Ariane après le header -->
            <xpath expr="//div[@id='wrapwrap']/main" position="inside">
                <t t-call="website_navigation_enhancement.website_breadcrumb_template"/>
            </xpath>
        </template>

        <!-- Template pour améliorer le menu des catégories -->
        <template id="website_sale_categories_enhancement" name="Website Sale Categories Enhancement" inherit_id="website_sale.categories">
            <xpath expr="//div[@class='oe_website_sale']" position="attributes">
                <attribute name="class">oe_website_sale website-navigation-enhanced</attribute>
            </xpath>
            
            <!-- Améliorer le menu des catégories -->
            <xpath expr="//div[contains(@class, 'categories')]" position="attributes">
                <attribute name="class">categories category-menu</attribute>
            </xpath>
            
            <!-- Ajouter des classes pour la hiérarchie -->
            <xpath expr="//ul[contains(@class, 'nav')]" position="attributes">
                <attribute name="class">nav category-list</attribute>
            </xpath>
            
            <!-- Améliorer les liens de catégories -->
            <xpath expr="//a[contains(@class, 'nav-link')]" position="attributes">
                <attribute name="class">nav-link category-link</attribute>
            </xpath>
        </template>

        <!-- Template pour la page produit -->
        <template id="website_sale_product_enhancement" name="Website Sale Product Enhancement" inherit_id="website_sale.product">
            <!-- Ajouter le fil d'Ariane sur les pages produit -->
            <xpath expr="//div[@id='product_detail']" position="before">
                <t t-call="website_navigation_enhancement.website_breadcrumb_template"/>
            </xpath>
            
            <!-- Améliorer l'affichage de la catégorie du produit -->
            <xpath expr="//div[contains(@class, 'product-category')]" position="attributes">
                <attribute name="class">product-category position-indicator</attribute>
            </xpath>
        </template>

        <!-- Template pour la liste des produits -->
        <template id="website_sale_products_enhancement" name="Website Sale Products Enhancement" inherit_id="website_sale.products">
            <!-- Ajouter le fil d'Ariane sur les pages de liste -->
            <xpath expr="//div[@class='oe_website_sale']" position="inside">
                <t t-call="website_navigation_enhancement.website_breadcrumb_template"/>
            </xpath>
        </template>

    </data>
</odoo>
