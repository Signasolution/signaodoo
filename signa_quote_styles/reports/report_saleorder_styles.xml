<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Odoo 18 / Studio-friendly wrappers:
    Each wrapper renders its own header + footer (editable in Studio) and then calls
    `sale.report_saleorder_document` as the body. This keeps the body common while
    allowing independent branding (logo/band/colors/header texts) per report.
    -->

    <!-- Shared helper: ensure `doc` exists for Studio snippets -->
    <template id="report_saleorder_doc_alias" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="before">
            <t t-set="doc" t-value="docs and docs[0] or False"/>
        </xpath>
    </template>

    <template id="report_saleorder_signasolution_wrapper" name="Devis - SignaSolution (Wrapper)">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="doc" t-value="o"/>
                <t t-set="company" t-value="o.company_id"/>

                <!-- HEADER (editable in Studio) -->
                <div class="signa-header signa-header-signasolution">
                    <div class="signa-header-band" style="height:18px; background:#0b5cad;"></div>
                    <div class="signa-header-content" style="display:flex; justify-content:space-between; align-items:center; padding:12px 0;">
                        <div class="signa-header-left" style="display:flex; align-items:center; gap:12px;">
                            <img class="signa-logo" t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height:60px;"/>
                            <div class="signa-brand-title" style="font-size:18px; font-weight:700;">SignaSolution</div>
                        </div>
                        <div class="signa-header-right" style="text-align:right; font-size:12px;">
                            <div t-esc="company.name"/>
                            <div t-if="company.phone" t-esc="company.phone"/>
                            <div t-if="company.email" t-esc="company.email"/>
                            <div t-if="company.website" t-esc="company.website"/>
                        </div>
                    </div>
                </div>

                <!-- MAIN -->
                <main class="signa-main">
                    <t t-call="sale.report_saleorder_document"/>
                </main>

                <!-- FOOTER (editable in Studio) -->
                <div class="signa-footer signa-footer-signasolution" style="border-top:1px solid #ddd; padding-top:6px; font-size:10px; color:#666;">
                    <div style="display:flex; justify-content:space-between;">
                        <div>
                            <span t-esc="company.name"/>
                            <t t-if="company.vat"> — <span t-esc="company.vat"/></t>
                        </div>
                        <div>
                            Page <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
                </div>

            </t>
        </t>
    </template>

