<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Odoo 18 / Studio: root layouts visible/editable in Studio without modifying shared templates. -->
    <template id="external_layout_signasolution_root" name="External layout – SignaSolution">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="signa_brand" t-value="'SignaSolution'"/>
                <div class="signa-brand-hook signa-brand-signasolution"/>
                <t t-raw="0"/>
            </t>
        </t>
    </template>

