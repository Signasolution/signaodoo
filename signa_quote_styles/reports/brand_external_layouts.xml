<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Brand-specific layouts (Odoo 18): editable per brand without touching web.external_layout -->
    <template id="external_layout_signasolution" name="External layout – SignaSolution (Brand)">
        <t t-call="web.external_layout">
            <t t-set="signa_brand" t-value="'SignaSolution'"/>
            <div class="signa-brand-hook signa-brand-signasolution"/>
            <t t-raw="0"/>
        </t>
    </template>

