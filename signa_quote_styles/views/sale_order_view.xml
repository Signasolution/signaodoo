<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherit_signa_quote_styles" model="ir.ui.view">
        <field name="name">sale.order.form.signa.quote.styles</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_print_quotation"
                        type="object"
                        string="Imprimer devis"
                        class="btn-primary"
                        invisible="state not in ('draft','sent')"/>
            </xpath>
        </field>
    </record>
</odoo>
