<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="product_pricelist_qty_table" inherit_id="website_sale.product">
    <xpath expr="//div[@id='add_to_cart_wrap']" position="after">
      <t t-if="product and product.pricelist_item_ids and len(product.pricelist_item_ids) > 1">
        <table class="table mt-3">
          <thead>
            <tr>
              <th>Quantit√©</th>
              <th>Prix</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="product.pricelist_item_ids" t-as="item">
              <tr class="pricelist-row" t-att-data-quantity="item.min_quantity">
                <td>
                  <t t-esc="int(item.min_quantity) if item.min_quantity == int(item.min_quantity) else item.min_quantity"/>
                </td>
                <td>
                  <t t-esc="'%.2f %s' % (item.fixed_price, item.currency_id.symbol)"/>
                </td>
              </tr>
            </t>
          </tbody>
        </table>
      </t>
    </xpath>
  </template>
</odoo>
